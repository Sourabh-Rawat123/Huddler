<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= room.name %> - Huddler
    </title>
    <link href="/output.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            height: 100vh;
            overflow: hidden;
        }

        .container {
            display: flex;
            height: 100vh;
            max-width: 1920px;
            margin: 0 auto;
            background: white;
        }

        /* ========== SIDEBAR (User List) ========== */
        .sidebar {
            width: 280px;
            background: #2c3e50;
            color: white;
            display: flex;
            flex-direction: column;
            border-right: 2px solid #34495e;
        }

        .room-header {
            padding: 20px;
            background: #1a252f;
            border-bottom: 2px solid #34495e;
        }

        .room-name {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .room-code {
            display: inline-block;
            background: #667eea;
            padding: 6px 12px;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }

        .room-code:hover {
            background: #764ba2;
            transform: scale(1.05);
        }

        .users-section {
            flex: 1;
            overflow-y: auto;
            padding: 15px;
        }

        .users-title {
            font-size: 14px;
            font-weight: 600;
            color: #95a5a6;
            margin-bottom: 10px;
            text-transform: uppercase;
        }

        .user-item {
            display: flex;
            align-items: center;
            padding: 10px;
            margin-bottom: 8px;
            background: #34495e;
            border-radius: 8px;
            transition: all 0.2s;
        }

        .user-item:hover {
            background: #3d566e;
        }

        .user-avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            margin-right: 12px;
            position: relative;
        }

        .user-status {
            position: absolute;
            bottom: 0;
            right: 0;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: #10b981;
            border: 2px solid #34495e;
        }

        .user-info {
            flex: 1;
        }

        .user-name {
            font-size: 14px;
            font-weight: 500;
        }

        .user-stream-status {
            font-size: 11px;
            color: #95a5a6;
            margin-top: 2px;
        }

        /* ========== VIDEO SECTION ========== */
        .video-section {
            flex: 1;
            display: flex;
            flex-direction: column;
            background: #1a1a1a;
        }

        .videos-container {
            flex: 1;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 10px;
            padding: 10px;
            overflow-y: auto;
        }

        .video-wrapper {
            position: relative;
            background: #000;
            border-radius: 12px;
            overflow: hidden;
            aspect-ratio: 16/9;
        }

        .video-element {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .video-placeholder {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #2c3e50, #34495e);
        }

        .video-placeholder-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 32px;
            font-weight: 600;
            color: white;
        }

        .video-username {
            position: absolute;
            bottom: 10px;
            left: 10px;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 6px 12px;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 500;
        }

        .video-muted-icon {
            position: absolute;
            top: 10px;
            right: 10px;
            background: rgba(239, 68, 68, 0.9);
            color: white;
            padding: 6px 10px;
            border-radius: 6px;
            font-size: 12px;
        }

        /* ========== CONTROLS ========== */
        .controls {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 15px;
            padding: 20px;
            background: #2c3e50;
            border-top: 2px solid #34495e;
        }

        .control-btn {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            border: none;
            background: #34495e;
            color: white;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            transition: all 0.3s;
        }

        .control-btn:hover {
            background: #3d566e;
            transform: scale(1.1);
        }

        .control-btn.active {
            background: #667eea;
        }

        .control-btn.danger {
            background: #ef4444;
        }

        .control-btn.danger:hover {
            background: #dc2626;
        }

        /* ========== CHAT PANEL ========== */
        .chat-panel {
            width: 350px;
            background: white;
            display: flex;
            flex-direction: column;
            border-left: 2px solid #e5e7eb;
        }

        .chat-header {
            padding: 20px;
            background: #f9fafb;
            border-bottom: 2px solid #e5e7eb;
            font-size: 18px;
            font-weight: 600;
            color: #1f2937;
        }

        .messages-container {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .message {
            display: flex;
            flex-direction: column;
            gap: 4px;
            animation: slideIn 0.3s ease;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .message-header {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .message-author {
            font-weight: 600;
            font-size: 14px;
            color: #667eea;
        }

        .message-time {
            font-size: 11px;
            color: #9ca3af;
        }

        .message-content {
            padding: 10px 14px;
            background: #f3f4f6;
            border-radius: 12px;
            font-size: 14px;
            color: #1f2937;
            word-wrap: break-word;
        }

        .message.own .message-author {
            color: #764ba2;
        }

        .message.own .message-content {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            margin-left: auto;
            max-width: 80%;
        }

        .typing-indicator {
            padding: 10px;
            color: #9ca3af;
            font-size: 13px;
            font-style: italic;
            min-height: 35px;
        }

        .chat-input-container {
            padding: 20px;
            background: #f9fafb;
            border-top: 2px solid #e5e7eb;
        }

        .chat-input-wrapper {
            display: flex;
            gap: 10px;
        }

        .chat-input {
            flex: 1;
            padding: 12px 16px;
            border: 2px solid #e5e7eb;
            border-radius: 24px;
            font-size: 14px;
            outline: none;
            transition: all 0.3s;
        }

        .chat-input:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .send-btn {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            border: none;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            transition: all 0.3s;
        }

        .send-btn:hover {
            transform: scale(1.1);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }

        .send-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        /* ========== SCROLLBAR ========== */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        ::-webkit-scrollbar-thumb {
            background: #667eea;
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #764ba2;
        }

        /* ========== NOTIFICATIONS ========== */
        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            background: rgba(0, 0, 0, 0.9);
            color: white;
            padding: 15px 20px;
            border-radius: 12px;
            z-index: 1000;
            animation: slideInRight 0.3s ease;
        }

        @keyframes slideInRight {
            from {
                transform: translateX(400px);
                opacity: 0;
            }

            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        /* ========== RESPONSIVE ========== */
        @media (max-width: 1024px) {
            .sidebar {
                width: 220px;
            }

            .chat-panel {
                width: 300px;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <!-- Sidebar - Users List -->
        <div class="sidebar">
            <div class="room-header">
                <div class="room-name">
                    <%= room.name %>
                </div>
                <div class="room-code" onclick="copyRoomCode()" title="Click to copy">
                    üìã <%= room.roomCode %>
                </div>
            </div>
            <div class="users-section">
                <div class="users-title">Participants (<span id="userCount">1</span>)</div>
                <div id="usersList">
                    <!-- Users will be dynamically added here -->
                </div>
            </div>
        </div>

        <!-- Video Section -->
        <div class="video-section">
            <div class="videos-container" id="videosContainer">
                <!-- Videos will be dynamically added here -->
            </div>

            <!-- Controls -->
            <div class="controls">
                <button class="control-btn" id="toggleAudioBtn" title="Mute/Unmute">
                    üé§
                </button>
                <button class="control-btn" id="toggleVideoBtn" title="Camera On/Off">
                    üìπ
                </button>
                <button class="control-btn" id="shareScreenBtn" title="Share Screen">
                    üñ•Ô∏è
                </button>
                <button class="control-btn danger" id="leaveRoomBtn" title="Leave Room">
                    üìû
                </button>
            </div>
        </div>

        <!-- Chat Panel -->
        <div class="chat-panel">
            <div class="chat-header">üí¨ Messages</div>
            <div class="messages-container" id="messagesContainer">
                <% if (messages && messages.length> 0) { %>
                    <% messages.forEach(msg=> { %>
                        <div class="message <%= msg.Sender._id.toString() === user._id.toString() ? 'own' : '' %>">
                            <div class="message-header">
                                <span class="message-author">
                                    <%= msg.Sender.username %>
                                </span>
                                <span class="message-time">
                                    <%= new Date(msg.createdAt).toLocaleTimeString('en-US', { hour: '2-digit' ,
                                        minute: '2-digit' }) %>
                                </span>
                            </div>
                            <div class="message-content">
                                <%= msg.content %>
                            </div>
                        </div>
                        <% }) %>
                            <% } %>
            </div>
            <div class="typing-indicator" id="typingIndicator"></div>
            <div class="chat-input-container">
                <div class="chat-input-wrapper">
                    <input type="text" class="chat-input" id="messageInput" placeholder="Type a message..."
                        autocomplete="off" />
                    <button class="send-btn" id="sendBtn">‚û§</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Socket.io -->
    <script src="/socket.io/socket.io.js"></script>

    <script>
        // Room and User Data
        const roomId = '<%= room._id %>';
        const username = '<%= user.username %>';
        const userId = '<%= user._id %>';
        const roomCode = '<%= room.roomCode %>';

        // Socket.io Connection
        const socket = io();

        // WebRTC Configuration
        const configuration = {
            iceServers: [
                { urls: 'stun:stun.l.google.com:19302' },
                { urls: 'stun:stun1.l.google.com:19302' }
            ]
        };

        // State
        let localStream = null;
        let screenStream = null;
        let peerConnections = {};
        let isAudioMuted = false;
        let isVideoOff = false;
        let isSharingScreen = false;
        let typingTimeout = null;

        // DOM Elements
        const messagesContainer = document.getElementById('messagesContainer');
        const messageInput = document.getElementById('messageInput');
        const sendBtn = document.getElementById('sendBtn');
        const typingIndicator = document.getElementById('typingIndicator');
        const videosContainer = document.getElementById('videosContainer');
        const usersList = document.getElementById('usersList');
        const userCount = document.getElementById('userCount');
        const toggleAudioBtn = document.getElementById('toggleAudioBtn');
        const toggleVideoBtn = document.getElementById('toggleVideoBtn');
        const shareScreenBtn = document.getElementById('shareScreenBtn');
        const leaveRoomBtn = document.getElementById('leaveRoomBtn');

        // Initialize
        async function init() {
            console.log('üöÄ Initializing chat room...');

            // Setup media FIRST (this will prompt for permissions)
            await setupLocalStream();

            // Join room AFTER media is ready
            socket.emit('join-room', { roomId, username, userId });

            // Add local video
            addVideoElement(socket.id, username, localStream, true);

            // Scroll to latest message
            scrollToBottom();

            console.log('‚úÖ Initialization complete');
        }

        // ========== MEDIA SETUP ==========
        async function setupLocalStream() {
            try {
                console.log('üé• Requesting camera and microphone access...');

                // Check if getUserMedia is supported
                if (!navigator.mediaDevices || !navigator.mediaDevices.getUserMedia) {
                    throw new Error('Your browser does not support camera/microphone access. Please use Chrome, Firefox, or Edge.');
                }

                localStream = await navigator.mediaDevices.getUserMedia({
                    video: {
                        width: { ideal: 1280 },
                        height: { ideal: 720 }
                    },
                    audio: {
                        echoCancellation: true,
                        noiseSuppression: true
                    }
                });

                console.log('‚úÖ Camera and microphone access granted');
                socket.emit('start-stream', { roomId, streamType: 'both' });

            } catch (error) {
                console.error('‚ùå Media access error:', error);

                let errorMessage = 'Could not access camera/microphone. ';

                if (error.name === 'NotAllowedError' || error.name === 'PermissionDeniedError') {
                    errorMessage += 'Permission denied. Please allow camera and microphone access in your browser settings and refresh the page.';
                } else if (error.name === 'NotFoundError' || error.name === 'DevicesNotFoundError') {
                    errorMessage += 'No camera or microphone found. Please connect a device and refresh.';
                } else if (error.name === 'NotReadableError') {
                    errorMessage += 'Camera/microphone is already in use by another application.';
                } else if (error.name === 'OverconstrainedError') {
                    errorMessage += 'Camera/microphone constraints could not be satisfied.';
                } else if (error.name === 'SecurityError') {
                    errorMessage += 'Access denied due to security. Make sure you\'re using HTTPS or localhost.';
                } else {
                    errorMessage += error.message || 'Unknown error occurred.';
                }

                alert(errorMessage);
                showNotification(errorMessage);

                // Still join the room but in chat-only mode
                localStream = null;
            }
        }

        // ========== VIDEO ELEMENTS ==========
        function addVideoElement(socketId, username, stream, isLocal = false) {
            if (document.getElementById(`video-${socketId}`)) return;

            const videoWrapper = document.createElement('div');
            videoWrapper.className = 'video-wrapper';
            videoWrapper.id = `video-${socketId}`;

            if (stream) {
                const video = document.createElement('video');
                video.srcObject = stream;
                video.className = 'video-element';
                video.autoplay = true;
                video.playsInline = true;
                if (isLocal) video.muted = true;

                videoWrapper.appendChild(video);
            } else {
                const placeholder = document.createElement('div');
                placeholder.className = 'video-placeholder';
                placeholder.innerHTML = `
                    <div class="video-placeholder-avatar">
                        ${username.charAt(0).toUpperCase()}
                    </div>
                `;
                videoWrapper.appendChild(placeholder);
            }

            const usernameLabel = document.createElement('div');
            usernameLabel.className = 'video-username';
            usernameLabel.textContent = isLocal ? `${username} (You)` : username;
            videoWrapper.appendChild(usernameLabel);

            videosContainer.appendChild(videoWrapper);
        }

        function removeVideoElement(socketId) {
            const videoWrapper = document.getElementById(`video-${socketId}`);
            if (videoWrapper) videoWrapper.remove();
        }

        // ========== WEBRTC ==========
        function createPeerConnection(targetSocketId) {
            console.log(`üîó Creating peer connection for ${targetSocketId}`);
            const pc = new RTCPeerConnection(configuration);
            peerConnections[targetSocketId] = pc;

            // Add local stream tracks
            if (localStream) {
                localStream.getTracks().forEach(track => {
                    console.log(`‚ûï Adding ${track.kind} track to peer connection`);
                    pc.addTrack(track, localStream);
                });
            }

            // Handle incoming stream
            pc.ontrack = (event) => {
                console.log(`üìπ Received remote track from ${targetSocketId}:`, event.track.kind);
                const [remoteStream] = event.streams;
                updateVideoStream(targetSocketId, remoteStream);
            };

            // Handle ICE candidates
            pc.onicecandidate = (event) => {
                if (event.candidate) {
                    console.log(`üì§ Sending ICE candidate to ${targetSocketId}`);
                    socket.emit('webrtc-ice-candidate', {
                        targetSocketId,
                        candidate: event.candidate
                    });
                }
            };

            // Monitor connection state
            pc.onconnectionstatechange = () => {
                console.log(`üîå Connection state with ${targetSocketId}: ${pc.connectionState}`);
                if (pc.connectionState === 'failed') {
                    console.error(`‚ùå Connection failed with ${targetSocketId}`);
                }
            };

            pc.oniceconnectionstatechange = () => {
                console.log(`üßä ICE connection state with ${targetSocketId}: ${pc.iceConnectionState}`);
            };

            return pc;
        }

        function updateVideoStream(socketId, stream) {
            const videoWrapper = document.getElementById(`video-${socketId}`);
            if (!videoWrapper) return;

            const existingVideo = videoWrapper.querySelector('video');
            if (existingVideo) {
                existingVideo.srcObject = stream;
            } else {
                const placeholder = videoWrapper.querySelector('.video-placeholder');
                if (placeholder) placeholder.remove();

                const video = document.createElement('video');
                video.srcObject = stream;
                video.className = 'video-element';
                video.autoplay = true;
                video.playsInline = true;
                videoWrapper.insertBefore(video, videoWrapper.firstChild);
            }
        }

        async function startCall(targetSocketId) {
            console.log(`üìû Starting call to socket: ${targetSocketId}`);

            if (!localStream) {
                console.error('‚ùå Cannot start call - no local stream');
                return;
            }

            const pc = createPeerConnection(targetSocketId);

            try {
                const offer = await pc.createOffer();
                await pc.setLocalDescription(offer);

                console.log(`üì§ Sending offer to ${targetSocketId}`);

                socket.emit('webrtc-offer', {
                    targetSocketId,
                    offer,
                    streamType: 'both'
                });
            } catch (error) {
                console.error('‚ùå Error creating offer:', error);
            }
        }

        // ========== CONTROLS ==========
        toggleAudioBtn.addEventListener('click', () => {
            if (!localStream) return;

            const audioTrack = localStream.getAudioTracks()[0];
            if (audioTrack) {
                audioTrack.enabled = !audioTrack.enabled;
                isAudioMuted = !audioTrack.enabled;

                toggleAudioBtn.classList.toggle('active', !isAudioMuted);
                toggleAudioBtn.textContent = isAudioMuted ? 'üîá' : 'üé§';

                socket.emit('toggle-audio', { roomId, isMuted: isAudioMuted });
            }
        });

        toggleVideoBtn.addEventListener('click', () => {
            if (!localStream) return;

            const videoTrack = localStream.getVideoTracks()[0];
            if (videoTrack) {
                videoTrack.enabled = !videoTrack.enabled;
                isVideoOff = !videoTrack.enabled;

                toggleVideoBtn.classList.toggle('active', !isVideoOff);
                toggleVideoBtn.textContent = isVideoOff ? 'üìπ‚ùå' : 'üìπ';

                socket.emit('toggle-video', { roomId, isVideoOff });
            }
        });

        shareScreenBtn.addEventListener('click', async () => {
            if (!isSharingScreen) {
                try {
                    screenStream = await navigator.mediaDevices.getDisplayMedia({
                        video: true
                    });

                    isSharingScreen = true;
                    shareScreenBtn.classList.add('active');
                    socket.emit('start-screen-share', { roomId });

                    // Replace video track in all peer connections
                    const screenTrack = screenStream.getVideoTracks()[0];
                    for (const socketId in peerConnections) {
                        const sender = peerConnections[socketId]
                            .getSenders()
                            .find(s => s.track?.kind === 'video');
                        if (sender) sender.replaceTrack(screenTrack);
                    }

                    screenTrack.onended = () => {
                        stopScreenShare();
                    };
                } catch (error) {
                    console.error('Error sharing screen:', error);
                }
            } else {
                stopScreenShare();
            }
        });

        function stopScreenShare() {
            if (screenStream) {
                screenStream.getTracks().forEach(track => track.stop());
                screenStream = null;
            }

            isSharingScreen = false;
            shareScreenBtn.classList.remove('active');
            socket.emit('stop-screen-share', { roomId });

            // Restore camera track
            if (localStream) {
                const videoTrack = localStream.getVideoTracks()[0];
                for (const socketId in peerConnections) {
                    const sender = peerConnections[socketId]
                        .getSenders()
                        .find(s => s.track?.kind === 'video');
                    if (sender) sender.replaceTrack(videoTrack);
                }
            }
        }

        leaveRoomBtn.addEventListener('click', () => {
            if (confirm('Are you sure you want to leave the room?')) {
                cleanup();
                window.location.href = '/chat';
            }
        });

        function cleanup() {
            if (localStream) {
                localStream.getTracks().forEach(track => track.stop());
            }
            if (screenStream) {
                screenStream.getTracks().forEach(track => track.stop());
            }
            for (const socketId in peerConnections) {
                peerConnections[socketId].close();
            }
            socket.disconnect();
        }

        // ========== CHAT ==========
        messageInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                sendMessage();
            } else {
                handleTyping();
            }
        });

        sendBtn.addEventListener('click', sendMessage);

        function sendMessage() {
            const message = messageInput.value.trim();
            if (!message) return;

            socket.emit('chat-message', { roomId, message });
            socket.emit('stop-typing', { roomId });

            messageInput.value = '';
        }

        function handleTyping() {
            socket.emit('typing', { roomId });

            clearTimeout(typingTimeout);
            typingTimeout = setTimeout(() => {
                socket.emit('stop-typing', { roomId });
            }, 1000);
        }

        function addMessage(username, content, timestamp, isOwn = false) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${isOwn ? 'own' : ''}`;

            const time = new Date(timestamp).toLocaleTimeString('en-US', {
                hour: '2-digit',
                minute: '2-digit'
            });

            messageDiv.innerHTML = `
                <div class="message-header">
                    <span class="message-author">${username}</span>
                    <span class="message-time">${time}</span>
                </div>
                <div class="message-content">${escapeHtml(content)}</div>
            `;

            messagesContainer.appendChild(messageDiv);
            scrollToBottom();
        }

        function updateUsersList(users) {
            usersList.innerHTML = '';
            userCount.textContent = users.length;

            users.forEach(user => {
                if (!user.username) return;

                const userDiv = document.createElement('div');
                userDiv.className = 'user-item';
                userDiv.innerHTML = `
                    <div class="user-avatar">
                        ${user.username.charAt(0).toUpperCase()}
                        <div class="user-status"></div>
                    </div>
                    <div class="user-info">
                        <div class="user-name">${user.username}</div>
                        <div class="user-stream-status">
                            ${user.stream === 'both' ? 'üé• Video' :
                        user.stream === 'audio' ? 'üé§ Audio' :
                            user.stream === 'video' ? 'üìπ Video only' : 'üí¨ Chat'}
                        </div>
                    </div>
                `;
                usersList.appendChild(userDiv);
            });
        }

        // ========== SOCKET EVENTS ==========
        socket.on('existing-users', (users) => {
            console.log('üìã Received existing users:', users.length);
            updateUsersList(users);

            // Start calls with existing users (new user initiates)
            users.forEach(user => {
                if (user.socketId !== socket.id) {
                    console.log(`üé¨ Adding video element and starting call with ${user.username}`);
                    addVideoElement(user.socketId, user.username, null);

                    // Delay to ensure both sides are ready
                    setTimeout(() => {
                        console.log(`üìû Initiating call to ${user.username}`);
                        startCall(user.socketId);
                    }, 1500);
                }
            });
        });

        socket.on('user-joined', ({ username, socketId }) => {
            console.log(`üë§ ${username} joined the room`);
            showNotification(`${username} joined the room`);
            addVideoElement(socketId, username, null);

            // Don't initiate call - wait for new user to send offer
            // This prevents "glare" where both sides try to call each other
            if (peerConnections[socketId]) {
                peerConnections[socketId].close();
                delete peerConnections[socketId];
            }
        });

        socket.on('update-user-list', (users) => {
            updateUsersList(users);
        });

        socket.on('chat-message', ({ username, content, timestamp }) => {
            const isOwn = username === '<%= user.username %>';
            addMessage(username, content, timestamp, isOwn);
        });

        socket.on('user-typing', ({ username }) => {
            typingIndicator.textContent = `${username} is typing...`;
        });

        socket.on('user-stop-typing', () => {
            typingIndicator.textContent = '';
        });

        socket.on('webrtc-offer', async ({ senderSocketId, offer }) => {
            console.log(`üì• Received offer from ${senderSocketId}`);
            const pc = createPeerConnection(senderSocketId);

            try {
                await pc.setRemoteDescription(new RTCSessionDescription(offer));
                const answer = await pc.createAnswer();
                await pc.setLocalDescription(answer);

                console.log(`üì§ Sending answer to ${senderSocketId}`);

                socket.emit('webrtc-answer', {
                    targetSocketId: senderSocketId,
                    answer
                });
            } catch (error) {
                console.error('‚ùå Error handling offer:', error);
            }
        });

        socket.on('webrtc-answer', async ({ senderSocketId, answer }) => {
            console.log(`üì• Received answer from ${senderSocketId}`);
            const pc = peerConnections[senderSocketId];
            if (pc) {
                try {
                    await pc.setRemoteDescription(new RTCSessionDescription(answer));
                    console.log(`‚úÖ Connection established with ${senderSocketId}`);
                } catch (error) {
                    console.error('‚ùå Error handling answer:', error);
                }
            } else {
                console.error(`‚ùå No peer connection found for ${senderSocketId}`);
            }
        });

        socket.on('webrtc-ice-candidate', async ({ senderSocketId, candidate }) => {
            console.log(`üì• Received ICE candidate from ${senderSocketId}`);
            const pc = peerConnections[senderSocketId];
            if (pc) {
                try {
                    await pc.addIceCandidate(new RTCIceCandidate(candidate));
                    console.log(`‚úÖ ICE candidate added for ${senderSocketId}`);
                } catch (error) {
                    console.error('‚ùå Error adding ICE candidate:', error);
                }
            }
        });

        // ========== UTILITY FUNCTIONS ==========
        function scrollToBottom() {
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        function showNotification(message) {
            const notification = document.createElement('div');
            notification.className = 'notification';
            notification.textContent = message;
            document.body.appendChild(notification);

            setTimeout(() => {
                notification.remove();
            }, 3000);
        }

        function copyRoomCode() {
            navigator.clipboard.writeText(roomCode);
            showNotification('Room code copied to clipboard!');
        }

        // Cleanup on page unload
        window.addEventListener('beforeunload', cleanup);

        // Initialize the app
        init();
    </script>
