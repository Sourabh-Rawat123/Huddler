<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Huddler - <%= User.username %>
    </title>
    <link href="/output.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 2rem;
        }

        .flash-message {
            padding: 1rem 1.5rem;
            border-radius: 12px;
            animation: slideIn 0.3s ease, fadeOut 0.3s ease 2.7s forwards;
            position: fixed;
            top: 1rem;
            right: 2rem;
            z-index: 1000;
            font-weight: 500;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
        }

        .flash-success {
            background: #10b981;
            color: white;
        }

        .flash-error {
            background: #ef4444;
            color: white;
        }

        @keyframes slideIn {
            from {
                transform: translateX(400px);
                opacity: 0;
            }

            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        @keyframes fadeOut {
            to {
                opacity: 0;
                transform: translateX(400px);
            }
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 1.5rem 2rem;
            border-radius: 16px;
            margin-bottom: 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .logo {
            font-size: 1.75rem;
            font-weight: 700;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .user-profile {
            position: relative;
        }

        .profile-button {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.5rem 1rem;
            background: #f8f9fa;
            border-radius: 50px;
            border: none;
            cursor: pointer;
            transition: all 0.2s;
        }

        .profile-button:hover {
            background: #e9ecef;
            transform: translateY(-2px);
        }

        .avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid white;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .dropdown-arrow {
            width: 16px;
            height: 16px;
            transition: transform 0.2s;
        }

        .dropdown-arrow.open {
            transform: rotate(180deg);
        }

        .dropdown {
            position: absolute;
            top: calc(100% + 0.75rem);
            right: 0;
            background: white;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
            min-width: 280px;
            opacity: 0;
            visibility: hidden;
            transform: translateY(-10px);
            transition: all 0.3s ease;
            z-index: 100;
        }

        .dropdown.show {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }

        .dropdown-header {
            padding: 1.5rem;
            border-bottom: 1px solid #e9ecef;
        }

        .dropdown-name {
            font-weight: 600;
            color: #1a1a1a;
            font-size: 1rem;
            margin-bottom: 0.25rem;
        }

        .dropdown-email {
            font-size: 0.875rem;
            color: #666;
        }

        .dropdown-menu {
            padding: 0.5rem;
        }

        .dropdown-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.875rem 1rem;
            color: #1a1a1a;
            text-decoration: none;
            border-radius: 8px;
            transition: background 0.2s;
            font-size: 0.95rem;
            border: none;
            width: 100%;
            text-align: left;
            background: none;
            cursor: pointer;
        }

        .dropdown-item:hover {
            background: #f8f9fa;
        }

        .dropdown-item.danger {
            color: #ef4444;
        }

        .dropdown-item.danger:hover {
            background: #fee;
        }

        .welcome-card {
            background: white;
            padding: 3rem 2rem;
            border-radius: 20px;
            text-align: center;
            margin-bottom: 2rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }

        .welcome-card h1 {
            font-size: 2.5rem;
            font-weight: 700;
            color: #1a1a1a;
            margin-bottom: 0.5rem;
        }

        .welcome-card p {
            font-size: 1.1rem;
            color: #666;
        }

        .actions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
        }

        .action-card {
            background: white;
            padding: 2.5rem;
            border-radius: 20px;
            text-decoration: none;
            color: inherit;
            transition: all 0.3s ease;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            display: block;
            position: relative;
            overflow: hidden;
        }

        .action-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }

        .action-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
        }

        .action-card:hover::before {
            transform: scaleX(1);
        }

        .action-icon {
            width: 64px;
            height: 64px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.5rem;
            font-size: 2rem;
            transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        .action-icon:hover {
            transform: perspective(500px) rotateY(15deg) rotateX(-10deg) scale(1.15);
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
            transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        .action-card h2 {
            font-size: 1.5rem;
            font-weight: 600;
            color: #1a1a1a;
            margin-bottom: 0.75rem;
        }

        .action-card p {
            color: #666;
            line-height: 1.6;
        }

        /* Rooms Section */
        .rooms-section {
            margin-top: 3rem;
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .section-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: white;
        }

        .rooms-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 1.5rem;
        }

        .room-card {
            background: white;
            border-radius: 16px;
            padding: 1.75rem;
            text-decoration: none;
            color: inherit;
            transition: all 0.3s ease;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            position: relative;
            overflow: hidden;
        }

        .room-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        }

        .room-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
        }

        .room-header {
            display: flex;
            justify-content: space-between;
            align-items: start;
            margin-bottom: 1rem;
        }

        .room-info h3 {
            font-size: 1.25rem;
            font-weight: 600;
            color: #1a1a1a;
            margin-bottom: 0.25rem;
        }

        .room-type {
            display: inline-block;
            padding: 0.25rem 0.75rem;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        .room-type.public {
            background: #dbeafe;
            color: #1e40af;
        }

        .room-type.private {
            background: #fce7f3;
            color: #9f1239;
        }

        .room-type.direct {
            background: #d1fae5;
            color: #065f46;
        }

        .room-description {
            color: #666;
            font-size: 0.95rem;
            margin-bottom: 1rem;
            line-height: 1.5;
        }

        .room-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 1rem;
            border-top: 1px solid #e5e7eb;
        }

        .room-admin {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #666;
            font-size: 0.85rem;
        }

        .admin-badge {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 0.25rem 0.5rem;
            border-radius: 6px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .room-participants {
            color: #666;
            font-size: 0.85rem;
        }

        .empty-state {
            background: white;
            border-radius: 16px;
            padding: 3rem 2rem;
            text-align: center;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .empty-state-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
        }

        .empty-state h3 {
            font-size: 1.5rem;
            font-weight: 600;
            color: #1a1a1a;
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: #666;
            margin-bottom: 1.5rem;
        }

        .btn-primary {
            display: inline-block;
            padding: 0.75rem 1.5rem;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            text-decoration: none;
            border-radius: 12px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(102, 126, 234, 0.4);
        }

        @media (max-width: 768px) {
            body {
                padding: 1rem;
            }

            .header {
                padding: 1rem 1.25rem;
                margin-bottom: 1.5rem;
            }

            .logo {
                font-size: 1.25rem;
            }

            .avatar {
                width: 32px;
                height: 32px;
            }

            .profile-button {
                padding: 0.4rem 0.75rem;
                gap: 0.5rem;
            }

            .dropdown {
                min-width: 240px;
                right: -10px;
            }

            .welcome-section {
                padding: 2rem 1.5rem;
                margin-bottom: 1.5rem;
            }

            .welcome-section h1 {
                font-size: 1.5rem;
                margin-bottom: 0.5rem;
            }

            .welcome-section p {
                font-size: 0.9rem;
            }

            .actions-grid {
                grid-template-columns: 1fr;
                gap: 1.25rem;
            }

            .action-card {
                padding: 1.75rem 1.5rem;
            }

            .action-icon {
                width: 64px;
                height: 64px;

                /* Add this */
            }

            .action-icon:hover {
                transform: rotateY(20deg) scale(1.1);
                /* Add deg unit */
            }

            .action-card h2 {
                font-size: 1.25rem;
            }

            .action-card p {
                font-size: 0.9rem;
            }

            .flash-message {
                top: 1rem;
                right: 1rem;
                left: 1rem;
                max-width: none;
            }
        }

        @media (max-width: 480px) {
            body {
                padding: 0.75rem;
            }

            .header {
                padding: 0.875rem 1rem;
            }

            .welcome-section {
                padding: 1.5rem 1.25rem;
            }

            .welcome-section h1 {
                font-size: 1.35rem;
            }

            .action-card {
                padding: 1.5rem 1.25rem;
            }
        }

        @media (max-width: 1024px) and (min-width: 769px) {
            .container {
                max-width: 900px;
            }

            .welcome-section h1 {
                font-size: 1.85rem;
            }

            .actions-grid {
                gap: 1.5rem;
            }

            .action-card {
                padding: 1.75rem;
            }
        }

        @media (min-width: 1440px) {
            .container {
                max-width: 1600px;
            }

            .actions-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: 2.5rem;
            }

            .welcome-section h1 {
                font-size: 2.25rem;
            }

            .action-card {
                padding: 2.5rem;
            }
        }
    </style>
</head>

<body>
    <% const userAvatar=User.authProvider==="google" ? User.profilePicture : User.avatar; const
        userName=User.authProvider==='google' ? User.displayName : User.username; %>

        <% if (success && success.length> 0) { %>
            <div class="flash-message flash-success">
                <%= success %>
            </div>
            <% } %>

                <% if (error && error.length> 0) { %>
                    <div class="flash-message flash-error">
                        <%= error %>
                    </div>
                    <% } %>

                        <div class="container">
                            <!-- Header -->
                            <div class="header">
                                <div class="logo">üí¨ Huddler</div>

                                <div class="user-profile">
                                    <button class="profile-button" onclick="toggleDropdown()">
                                        <img src="<%= userAvatar %>" alt="<%= userName %>" class="avatar">
                                        <svg class="dropdown-arrow" id="arrow" viewBox="0 0 16 16" fill="none"
                                            stroke="#666" stroke-width="2">
                                            <path d="M4 6l4 4 4-4" />
                                        </svg>
                                    </button>

                                    <div class="dropdown" id="dropdown">
                                        <div class="dropdown-header">
                                            <div class="dropdown-name">
                                                <%= userName %>
                                            </div>
                                            <div class="dropdown-email">
                                                <%= User.email %>
                                            </div>
                                        </div>
                                        <div class="dropdown-menu">
                                            <a href="/user/profile" class="dropdown-item">
                                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none"
                                                    stroke="currentColor" stroke-width="2">
                                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                                                    <circle cx="12" cy="7" r="4" />
                                                </svg>
                                                Edit Profile
                                            </a>
                                            <form action="/user/logout" method="POST" style="margin: 0;">
                                                <button type="submit" class="dropdown-item danger">
                                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none"
                                                        stroke="currentColor" stroke-width="2">
                                                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" />
                                                        <polyline points="16 17 21 12 16 7" />
                                                        <line x1="21" y1="12" x2="9" y2="12" />
                                                    </svg>
                                                    Logout
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Welcome Card -->
                            <div class="welcome-card">
                                <h1>Welcome back, <%= userName %>! üëã</h1>
                                <p>Ready to start chatting? Choose an option below</p>
                            </div>

                            <!-- Action Cards -->
                            <div class="actions-grid">
                                <a href="#" class="action-card" onclick="event.preventDefault(); createRoom();">
                                    <div class="action-icon">‚ûï</div>
                                    <h2>Create a Room</h2>
                                    <p>Start a new chat room and invite your friends to join the conversation</p>
                                </a>

                                <a href="#" class="action-card" onclick="event.preventDefault(); joinRoom();">
                                    <div class="action-icon">üö™</div>
                                    <h2>Join a Room</h2>
                                    <p>Enter a room code to connect with an existing conversation</p>
                                </a>
                            </div>

                            <!-- My Rooms Section -->
                            <div class="rooms-section">
                                <div class="section-header">
                                    <h2 class="section-title">üí¨ My Rooms</h2>
                                </div>

                                <% if (rooms && rooms.length> 0) { %>
                                    <div class="rooms-grid">
                                        <% rooms.forEach(room=> { %>
                                            <a href="/chat/room/<%= room._id %>" class="room-card">
                                                <div class="room-header">
                                                    <div class="room-info">
                                                        <h3>
                                                            <%= room.name %>
                                                        </h3>
                                                        <span class="room-type <%= room.type %>">
                                                            <%= room.type %>
                                                        </span>
                                                    </div>
                                                </div>

                                                <% if (room.description) { %>
                                                    <p class="room-description">
                                                        <%= room.description %>
                                                    </p>
                                                    <% } else { %>
                                                        <p class="room-description" style="color: #9ca3af;">No
                                                            description</p>
                                                        <% } %>

                                                            <div class="room-footer">
                                                                <div class="room-admin">
                                                                    <% if (room.admin &&
                                                                        room.admin._id.toString()===User._id.toString())
                                                                        { %>
                                                                        <span class="admin-badge">üëë Admin</span>
                                                                        <% } else if (room.admin) { %>
                                                                            <span>üë§ <%= room.admin.username %></span>
                                                                            <% } %>
                                                                </div>
                                                                <div class="room-participants">
                                                                    üë• <%= room.participants.length %>
                                                                        <%= room.participants.length===1 ? 'member'
                                                                            : 'members' %>
                                                                </div>
                                                                <% if (room.admin &&
                                                                    room.admin._id.toString()===User._id.toString()) {
                                                                    %>
                                                                    <div>
                                                                        <button
                                                                            onclick="event.preventDefault(); endRoom('<%= room._id %>', '<%= room.name %>');"
                                                                            style="background: #ef4444; color: white; padding: 0.5rem 1rem; border-radius: 8px; border: none; cursor: pointer; font-size: 0.85rem; font-weight: 600;">üóëÔ∏è
                                                                            End Room</button>
                                                                    </div>
                                                                    <% } %>
                                                            </div>
                                            </a>
                                            <% }) %>
                                    </div>
                                    <% } else { %>
                                        <div class="empty-state">
                                            <div class="empty-state-icon">üí≠</div>
                                            <h3>No rooms yet</h3>
                                            <p>Create your first room or join an existing one to get started!</p>
                                            <a href="/chat/create_room" class="btn-primary">Create Your First Room</a>
                                        </div>
                                        <% } %>
                            </div>
                        </div>

                        <script>

                            function toggleDropdown() {
                                const dropdown = document.getElementById('dropdown');
                                const arrow = document.getElementById('arrow');
                                dropdown.classList.toggle('show');
                                arrow.classList.toggle('open');
                            }

                            // Close dropdown when clicking outside
                            window.addEventListener('click', function (e) {
                                if (!e.target.closest('.user-profile')) {
                                    document.getElementById('dropdown').classList.remove('show');
                                    document.getElementById('arrow').classList.remove('open');
                                }
                            });

                            function createRoom() {
                                window.location.href = "/chat/create_room"
                            }

                            function joinRoom() {
                                window.location.href = "/chat/join_room";
                            }

                            async function endRoom(roomId, roomName) {
                                if (!confirm(`Are you sure you want to permanently delete "${roomName}"? This cannot be undone.`)) {
                                    return;
                                }

                                try {
                                    const response = await fetch(`/chat/room/${roomId}`, {
                                        method: 'DELETE',
                                        credentials: 'include'
                                    });

                                    if (response.ok) {
                                        window.location.reload();
                                    } else {
                                        alert('Failed to delete room. You must be the admin.');
                                    }
                                } catch (error) {
                                    console.error('Error deleting room:', error);
                                    alert('An error occurred while deleting the room.');
                                }
                            }
                            // Token refresh
                            // async function refreshToken() {
                            //     try {
                            //         const res = await fetch('/user/refresh', {
                            //             method: 'POST',
                            //             credentials: 'include'
                            //         });
                            //         if (!res.ok) window.location.href = '/user/login';
                            //     } catch (e) {
                            //         window.location.href = '/user/login';
                            //     }
                            // }
                            // setInterval(refreshToken, 10 * 60 * 1000);
                            // refreshToken();
                        </script>
</body>

</html>